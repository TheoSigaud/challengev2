FROM node:19-alpine

ARG SUPABASE_URL
ARG SUPABASE_KEY
ARG SUPABASE_SERVICE_ROLE
ARG FRONT_URL

WORKDIR /home/node

COPY package*.json ./

RUN npm ci

COPY . .

RUN npm run build

USER node

ENV NODE_ENV=production
ENV SUPABASE_URL=${SUPABASE_URL}
ENV SUPABASE_KEY=${SUPABASE_KEY}
ENV SUPABASE_SERVICE_ROLE=${SUPABASE_SERVICE_ROLE}
ENV FRONT_URL=${FRONT_URL}

CMD [ "node", "dist/main.js" ]

EXPOSE 4009